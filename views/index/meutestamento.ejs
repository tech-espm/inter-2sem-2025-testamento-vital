<div class="container-fluid">

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cadastro de Testamento Vital</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container my-5">

  <h1 class="mb-4 text-center">Cadastro de Testamento Vital</h1>
  
  <form>
    <!-- Dados Pessoais -->
    <h5 class="mb-3">Dados Pessoais</h5>
    <div class="row mb-3">
      <div class="col-md-6 mb-3">
        <label for="nome" class="form-label">Nome Completo</label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Seu nome completo" required>
      </div>
      <div class="col-md-6 mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="seu@email.com" required>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6 mb-3">
        <label for="cpf" class="form-label">CPF</label>
        <input type="text" class="form-control" id="cpf" name="cpf" placeholder="000.000.000-00" maxlength="14" required>
      </div>
      <div class="col-md-6 mb-3">
        <label for="nascimento" class="form-label">Data de Nascimento</label>
        <input type="date" class="form-control" id="nascimento" name="data_nascimento" required>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6 mb-3">
        <label for="telefone" class="form-label">Telefone</label>
        <input type="tel" class="form-control" id="telefone" name="telefone" placeholder="(DD) 00000-0000">
      </div>
      <div class="col-md-6 mb-3">
        <label for="endereco" class="form-label">Endereço</label>
        <input type="text" class="form-control" id="endereco" name="endereco" placeholder="Rua, Número, Cidade" required>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-md-6 mb-3">
        <label for="uf" class="form-label">Estado (UF)</label>
        <select id="uf" name="uf" class="form-select" required>
          <option value="" disabled>Selecione seu Estado</option>
          <option value="AC" <%- (testamento && testamento.uf == "AC" ? 'selected="selected"' : '') %>>AC - Acre</option>
          <option value="AL" <%- (testamento && testamento.uf == "AL" ? 'selected="selected"' : '') %>>AL - Alagoas</option>
          <option value="AP" <%- (testamento && testamento.uf == "AP" ? 'selected="selected"' : '') %>>AP - Amapá</option>
          <option value="AM" <%- (testamento && testamento.uf == "AM" ? 'selected="selected"' : '') %>>AM - Amazonas</option>
          <option value="BA" <%- (testamento && testamento.uf == "BA" ? 'selected="selected"' : '') %>>BA - Bahia</option>
          <option value="CE" <%- (testamento && testamento.uf == "CE" ? 'selected="selected"' : '') %>>CE - Ceará</option>
          <option value="DF" <%- (testamento && testamento.uf == "DF" ? 'selected="selected"' : '') %>>DF - Distrito Federal</option>
          <option value="ES" <%- (testamento && testamento.uf == "ES" ? 'selected="selected"' : '') %>>ES - Espírito Santo</option>
          <option value="GO" <%- (testamento && testamento.uf == "GO" ? 'selected="selected"' : '') %>>GO - Goiás</option>
          <option value="MA" <%- (testamento && testamento.uf == "MA" ? 'selected="selected"' : '') %>>MA - Maranhão</option>
          <option value="MT" <%- (testamento && testamento.uf == "MT" ? 'selected="selected"' : '') %>>MT - Mato Grosso</option>
          <option value="MS" <%- (testamento && testamento.uf == "MS" ? 'selected="selected"' : '') %>>MS - Mato Grosso do Sul</option>
          <option value="MG" <%- (testamento && testamento.uf == "MG" ? 'selected="selected"' : '') %>>MG - Minas Gerais</option>
          <option value="PA" <%- (testamento && testamento.uf == "PA" ? 'selected="selected"' : '') %>>PA - Pará</option>
          <option value="PB" <%- (testamento && testamento.uf == "PB" ? 'selected="selected"' : '') %>>PB - Paraíba</option>
          <option value="PR" <%- (testamento && testamento.uf == "PR" ? 'selected="selected"' : '') %>>PR - Paraná</option>
          <option value="PE" <%- (testamento && testamento.uf == "PE" ? 'selected="selected"' : '') %>>PE - Pernambuco</option>
          <option value="PI" <%- (testamento && testamento.uf == "PI" ? 'selected="selected"' : '') %>>PI - Piauí</option>
          <option value="RJ" <%- (testamento && testamento.uf == "RJ" ? 'selected="selected"' : '') %>>RJ - Rio de Janeiro</option>
          <option value="RN" <%- (testamento && testamento.uf == "RN" ? 'selected="selected"' : '') %>>RN - Rio Grande do Norte</option>
          <option value="RS" <%- (testamento && testamento.uf == "RS" ? 'selected="selected"' : '') %>>RS - Rio Grande do Sul</option>
          <option value="RO" <%- (testamento && testamento.uf == "RO" ? 'selected="selected"' : '') %>>RO - Rondônia</option>
          <option value="RR" <%- (testamento && testamento.uf == "RR" ? 'selected="selected"' : '') %>>RR - Roraima</option>
          <option value="SC" <%- (testamento && testamento.uf == "SC" ? 'selected="selected"' : '') %>>SC - Santa Catarina</option>
          <option value="SP" <%- (testamento && testamento.uf == "SP" ? 'selected="selected"' : '') %>>SP - São Paulo</option>
          <option value="SE" <%- (testamento && testamento.uf == "SE" ? 'selected="selected"' : '') %>>SE - Sergipe</option>
          <option value="TO" <%- (testamento && testamento.uf == "TO" ? 'selected="selected"' : '') %>>TO - Tocantins</option>
        </select>
      </div>
    </div>

    <!-- Representante Legal -->
    <h5 class="mb-3">Representante Legal</h5>
    <div class="mb-3">
      <label for="representante" class="form-label">Nome do Representante Legal</label>
      <input type="text" class="form-control" id="representante" name="representante" placeholder="Nome completo do representante" required>
    </div>
    <div class="row mb-4">
      <div class="col-md-6 mb-3">
        <label for="relacaoRep" class="form-label">Parentesco/Relação</label>
        <select id="relacaoRep" name="relacao_parentesco" class="form-select">
          <option value="" disabled>Selecione</option>
          <option value="Cônjuge" <%- (testamento && testamento.relacao_parentesco == "Cônjuge" ? 'selected="selected"' : '') %>>Cônjuge</option>
          <option value="Filho(a)" <%- (testamento && testamento.relacao_parentesco == "Filho(a)" ? 'selected="selected"' : '') %>>Filho(a)</option>
          <option value="Pai/Mãe" <%- (testamento && testamento.relacao_parentesco == "Pai/Mãe" ? 'selected="selected"' : '') %>>Pai/Mãe</option>
          <option value="Irmão/Irmã" <%- (testamento && testamento.relacao_parentesco == "Irmão/Irmã" ? 'selected="selected"' : '') %>>Irmão/Irmã</option>
          <option value="Amigo(a)" <%- (testamento && testamento.relacao_parentesco == "Amigo(a)" ? 'selected="selected"' : '') %>>Amigo(a)</option>
          <option value="Outro" <%- (testamento && testamento.relacao_parentesco == "Outro" ? 'selected="selected"' : '') %>>Outro</option>
        </select>
      </div>
      <div class="col-md-6 mb-3">
        <label for="representanteTel" class="form-label">Telefone do Representante</label>
        <input type="tel" class="form-control" id="representanteTel" name="telefone_representante" placeholder="(DD) 00000-0000">
      </div>
    </div>

    <!-- Preferências de Tratamento -->
    <h5 class="mb-3">Preferências de Tratamento</h5>
    <!-- Cenários aplicáveis -->
    <div class="mb-3">
      <label class="form-label">Cenários em que as diretivas se aplicam:</label>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="cenario1" name="cenario">
        <label class="form-check-label" for="cenario1">Doença terminal incurável</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="cenario2" name="cenario">
        <label class="form-check-label" for="cenario2">Estado vegetativo permanente</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="cenario3" name="cenario">
        <label class="form-check-label" for="cenario3">Condição de saúde irreversível sem cura</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="cenarioOutro" name="cenario">
        <label class="form-check-label" for="cenarioOutro">Outros (especificar)</label>
      </div>
      <!-- Campo extra para "Outros cenários", oculto por padrão -->
      <input type="text" class="form-control mt-2" id="cenarioOutroTexto" name="cenario_outro" placeholder="Descreva outros cenários..." style="display: none;">
    </div>
    <!-- Suporte e Ressuscitação -->
    <div class="mb-3">
      <label class="form-label">Suporte/Ressuscitação (RCP):</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="ressuscitacao" id="rcpSim" value="sim" checked>
        <label class="form-check-label" for="rcpSim">Aceito manobras de ressuscitação</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="ressuscitacao" id="rcpNao" value="nao">
        <label class="form-check-label" for="rcpNao">Recuso ressuscitação cardiopulmonar</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="ressuscitacao" id="rcpCondicional" value="condicional">
        <label class="form-check-label" for="rcpCondicional">Aceito apenas em condições específicas</label>
      </div>
      <!-- Textarea para condições específicas de RCP, oculta inicialmente -->
      <textarea class="form-control mt-2" id="condicoesRCP" name="condicoes_rcp" rows="2" placeholder="Especifique as condições..." style="display: none;"></textarea>
    </div>
    <!-- Hidratação e Nutrição -->
    <div class="mb-3">
      <label class="form-label">Hidratação e Nutrição Artificiais:</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="hidratacao" id="hidratacaoSim" value="sim" checked>
        <label class="form-check-label" for="hidratacaoSim">Desejo receber hidratação/nutrição artificial, se necessário</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="hidratacao" id="hidratacaoNao" value="nao">
        <label class="form-check-label" for="hidratacaoNao">Não desejo hidratação/nutrição artificial</label>
      </div>
    </div>
    <!-- Valores e Prioridades -->
    <div class="mb-3">
      <label for="valores" class="form-label">Valores e Prioridades (diretrizes gerais):</label>
      <textarea class="form-control" id="valores" name="valores" rows="3" placeholder="Descreva seus valores pessoais e prioridades..."></textarea>
    </div>
    <!-- Aspectos Religiosos/Espirituais -->
    <div class="mb-4">
      <label for="religioso" class="form-label">Aspectos Religiosos/Espirituais:</label>
      <textarea class="form-control" id="religioso" name="religioso" rows="3" placeholder="Descreva instruções de cunho religioso ou filosófico..."></textarea>
    </div>

    <!-- Doação de Órgãos/Tecidos -->
    <h5 class="mb-3">Doação de Órgãos/Tecidos</h5>
    <div class="mb-3">
      <label class="form-label d-block">Deseja permitir doação de órgãos e tecidos?</label>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="doacao" id="doacaoSim" value="sim">
        <label class="form-check-label" for="doacaoSim">Sim</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="doacao" id="doacaoNao" value="nao" checked>
        <label class="form-check-label" for="doacaoNao">Não</label>
      </div>
      <!-- Lista de órgãos/tecidos, oculta por padrão -->
      <div id="orgaosLista" class="mt-3" style="display: none;">
        <p class="mb-1">Quais órgãos/tecidos você autoriza doar:</p>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="orgao1" name="orgaos[]" value="coracao">
          <label class="form-check-label" for="orgao1">Coração</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="orgao2" name="orgaos[]" value="pulmoes">
          <label class="form-check-label" for="orgao2">Pulmões</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="orgao3" name="orgaos[]" value="rins">
          <label class="form-check-label" for="orgao3">Rins</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="orgao4" name="orgaos[]" value="figado">
          <label class="form-check-label" for="orgao4">Fígado</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="orgao5" name="orgaos[]" value="corneas">
          <label class="form-check-label" for="orgao5">Córneas</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="orgao6" name="orgaos[]" value="outros">
          <label class="form-check-label" for="orgao6">Outros (demais órgãos ou tecidos)</label>
        </div>
      </div>
    </div>

    <!-- Testemunhas -->
    <h5 class="mb-3">Testemunhas</h5>
    <div class="row mb-3">
      <div class="col-md-6 mb-3">
        <label for="testemunha1" class="form-label">Nome da Testemunha 1</label>
        <input type="text" class="form-control" id="testemunha1" name="testemunha1" placeholder="Nome completo da primeira testemunha">
      </div>
      <div class="col-md-6 mb-3">
        <label for="testemunha1Cpf" class="form-label">CPF da Testemunha 1</label>
        <input type="text" class="form-control" id="testemunha1Cpf" name="testemunha1_cpf" placeholder="000.000.000-00" maxlength="14">
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-md-6 mb-3">
        <label for="testemunha2" class="form-label">Nome da Testemunha 2</label>
        <input type="text" class="form-control" id="testemunha2" name="testemunha2" placeholder="Nome completo da segunda testemunha">
      </div>
      <div class="col-md-6 mb-3">
        <label for="testemunha2Cpf" class="form-label">CPF da Testemunha 2</label>
        <input type="text" class="form-control" id="testemunha2Cpf" name="testemunha2_cpf" placeholder="000.000.000-00" maxlength="14">
      </div>
    </div>

    <!-- Privacidade e Assinatura -->
    <h5 class="mb-3">Privacidade e Assinatura</h5>
    <div class="form-check mb-2">
      <input type="checkbox" class="form-check-input" id="aceitoTermos" required>
      <label class="form-check-label" for="aceitoTermos">
        Li e concordo com a <a href="#">Política de Privacidade</a>
      </label>
    </div>
    <div class="form-check mb-3">
      <input type="checkbox" class="form-check-input" id="confirmoDados" required>
      <label class="form-check-label" for="confirmoDados">
        Confirmo que as informações fornecidas são verdadeiras e representam minha vontade
      </label>
    </div>
    <div class="mb-4">
      <label for="assinatura" class="form-label">Assinatura (digite seu nome completo):</label>
      <input type="text" class="form-control" id="assinatura" name="assinatura" placeholder="Assine aqui digitando seu nome completo" required>
    </div>

    <!-- Botão de envio -->
    <button type="submit" class="btn btn-primary">Enviar</button>
  </form>
</div>

<!-- Bootstrap 5 JS bundle (opcional, para funcionalidade dos componentes do Bootstrap) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Script JavaScript para comportamentos dinâmicos do formulário -->
<script>
  // Quando o checkbox "Outros" em Cenários for marcado, mostrar o campo de texto para especificar
  const cenarioOutroCheckbox = document.getElementById('cenarioOutro');
  const cenarioOutroTexto = document.getElementById('cenarioOutroTexto');
  cenarioOutroCheckbox.addEventListener('change', function () {
    if (this.checked) {
      cenarioOutroTexto.style.display = 'block';
      cenarioOutroTexto.focus();
    } else {
      cenarioOutroTexto.value = '';
      cenarioOutroTexto.style.display = 'none';
    }
  });

  // Quando a opção "Condicional" de RCP for selecionada, exibir textarea para condições específicas
  const rcpRadios = document.querySelectorAll('input[name="ressuscitacao"]');
  const condicoesRCP = document.getElementById('condicoesRCP');
  rcpRadios.forEach(radio => {
    radio.addEventListener('change', function () {
      if (document.getElementById('rcpCondicional').checked) {
        condicoesRCP.style.display = 'block';
        condicoesRCP.focus();
      } else {
        condicoesRCP.value = '';
        condicoesRCP.style.display = 'none';
      }
    });
  });

  // Mostrar/ocultar lista de órgãos para doação dependendo da escolha do usuário
  const doacaoSim = document.getElementById('doacaoSim');
  const doacaoNao = document.getElementById('doacaoNao');
  const orgaosLista = document.getElementById('orgaosLista');
  doacaoSim.addEventListener('change', function () {
    if (this.checked) {
      orgaosLista.style.display = 'block';
    }
  });
  doacaoNao.addEventListener('change', function () {
    if (this.checked) {
      // Oculta a lista de órgãos e desmarca quaisquer seleções feitas
      orgaosLista.style.display = 'none';
      const organCheckboxes = orgaosLista.querySelectorAll('input[type="checkbox"]');
      organCheckboxes.forEach(chk => chk.checked = false);
    }
  });
</script>
</body>
</html>


</div>
